<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>show</servlet-name>
        <servlet-class>com.servlet.show</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>show</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>filerdemo</filter-name>
        <filter-class>com.kuang.filerdemo</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filerdemo</filter-name>
<!--只要是/servlet的请求都会经过这个过滤器-->
        <url-pattern>/de/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.listerner.listeneronlin</listener-class>
    </listener>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.de.Dao</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/de/dao</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.de.logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/de/logout</url-pattern>
    </servlet-mapping>
</web-app>